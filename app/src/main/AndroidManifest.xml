<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTrackerFinal"
        tools:targetApi="31">

        <!-- Launcher/Main activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registration/Login -->
        <activity
            android:name=".Register"
            android:exported="false" />

        <!-- Main pages -->
        <activity
            android:name=".MainPage"
            android:exported="false" />
        <activity
            android:name=".MainPageExpense"
            android:exported="false" />
        <activity
            android:name=".MainPageIncome"
            android:exported="false" />

        <!-- Insert pages -->
        <activity
            android:name=".ExpenseInsert"
            android:exported="false" />
        <activity
            android:name=".IncomeInsert"
            android:exported="false" />

        <!-- Display pages -->
        <activity
            android:name=".ExpenseDisplay"
            android:exported="false" />
        <activity
            android:name=".IncomeDisplay"
            android:exported="false" />

        <!-- Extra/sample/testing pages -->
        <activity
            android:name=".SampleActivity"
            android:exported="false"
            android:theme="@style/Theme.ExpenseTrackerFinal" />
        <activity
            android:name=".rounded_edittext"
            android:exported="false" />

    </application>

</manifest>
